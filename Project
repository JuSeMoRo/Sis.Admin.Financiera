import tkinter
from tkinter import font, ttk
from tkinter import *

#__________VENTANA DE BIENVENIDA___________
ventana= tkinter.Tk()
ventana.title("Su sistema financiero")
ventana.geometry("800x650")


#_______CABEZERA__________
cabezera=tkinter.Label(ventana,text="Bienvenido!",font=font.Font(family="Times", size=20)).pack() #el .pack es para msotrar el control
texto_de_bienvenida=tkinter.Label(ventana, justify=tkinter.CENTER,
                                  text="Su programa financiero, es un sistema que lo ayudará a llegar a un meta monetaria establecida \n según sus ingresos y egresos, lo anterior con base en el tiempo que usted establezca.",
                                  font=font.Font(family="Times", size=12)).pack()

introducción= Frame(ventana, width=500, height=250)
introducción.pack()
#_______CASILLA PARA INGRESAR NOMBRE
nombre= Label(ventana, introducción, text="Nombre de usuario: ")
nombre.place(x=50, y=10)
nombre_Entry = Entry(introducción, width=200) #Creación de Entry
nombre_Entry.place(x=200, y=10)
#_______CASILLA PARA INGRESAR META TIPO TEXTO
meta= Label(introducción, text="Descripción de su objetivo: ")
meta.place(x=50, y=30)
introducción2= Frame(ventana, height=250, width=500)
introducción2.pack()
meta_Entry = Entry(introducción2, width=200) #Creación de Entry
meta_Entry.place(x=200, y=10)
